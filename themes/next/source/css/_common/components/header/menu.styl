// Menu
// --------------------------------------------------
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: block;
  margin: 0 10px;
  list-style: none;
  text-align: left;
  padding: 5px 0;

  @media screen and (max-width: 767px) {
    margin-top: 10px;
  }

  a {
    display: block;
    font-size: 13px;
    line-height: inherit;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();

    &:hover { 
      //border-bottom-color: $menu-link-hover-border;
      background: #f6f6f6;
      .menu-icon{
        display: block;
        position: absolute;
        right: 10px;
        top: 15px;
        width: 7px;
        height: 7px;
        background: #aca7a7;
        border-radius: 50%;
      }
    }
    .menu-icon{
      display: none;
    }
  }

  .fa { margin-right: 5px; }
}

.use-motion .menu-item { opacity: 0; }
